---
import { getEntry, render } from "astro:content";
import FriendLinkCard from "@components/misc/FriendLinkCard.astro";
import Markdown from "@components/misc/Markdown.astro";
import { Icon } from "astro-icon/components";
import { friendLinks } from "../config/links";
import MainGridLayout from "../layouts/MainGridLayout.astro";

const linksPost = await getEntry("spec", "links");

if (!linksPost) {
	throw new Error("Links page content not found");
}

const { Content } = await render(linksPost);

// 打印友链数量，用于调试
console.log(`友链总数: ${friendLinks.length}`);
console.log("友链列表:", friendLinks);
---
<MainGridLayout title="友链" description="友情链接">
  <!-- 友链卡片区域 -->
  <div class="w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32 mb-6">
    <div class="card-base z-10 px-9 py-6 relative w-full">
      <div class="flex items-center gap-3 mb-6">
        <Icon name="material-symbols:group-rounded" class="text-3xl text-[var(--primary)]" />
        <h2 class="text-2xl font-bold text-[var(--primary)]">友链列表</h2>
        <span class="text-sm text-neutral-500">({friendLinks.length}个)</span>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {friendLinks.map((link, index) => {
          try {
            return (
              <FriendLinkCard
                name={link.name}
                url={link.url}
                description={link.description}
                avatar={link.avatar}
              />
            );
          } catch (error) {
            console.error(`渲染友链失败 [${index}]: ${link.name}`, error);
            return null;
          }
        })}
      </div>
    </div>
  </div>

  <!-- 说明文字区域 -->
  <div class="w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
    <div class="card-base z-10 px-9 py-6 relative w-full">
      <Markdown class="mt-2">
        <Content />
      </Markdown>
    </div>
  </div>
</MainGridLayout>
